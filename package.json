{
  "name": "clash-royale-deck-builder",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "cd apps/mobile && npm start",
    "server": "cd apps/server && npm run dev",
    "test": "cd apps/server && npm test",
    "install:all": "npm install && cd apps/mobile && npm install && cd ../server && npm install && cd ../../packages/shared && npm install"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
